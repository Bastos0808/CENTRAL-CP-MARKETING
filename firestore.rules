rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Regra geral: Apenas usuários autenticados podem ler/escrever.
    // Ajuste esta regra para ser mais granular conforme necessário.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regra específica para a coleção de usuários
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra específica para a coleção de agendamentos de podcast
    match /podcast_schedule/{scheduleId} {
      allow read, write: if request.auth != null;
    }
  }
}
