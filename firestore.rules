
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can only read their own data, but admins can read anyone's
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId;
    }

    // SDRs can only read/write their own performance data, but admins can read anyone's
    match /sdr_performance/{userId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Podcast schedule can be read/written by any authenticated user
    match /podcast_schedule/{docId} {
      allow read, write: if request.auth != null;
    }

    // Client data can be read/written by any authenticated user
    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }
  }
}
