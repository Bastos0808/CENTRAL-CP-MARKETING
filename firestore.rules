rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permite que qualquer usuário autenticado leia os dados dos clientes
    match /clients/{clientId} {
      allow read: if request.auth != null;
      // A escrita pode ser mais restrita, mas vamos permitir por enquanto
      allow write: if request.auth != null; 
    }

    // Regras para as conversas do chatbot
    match /conversations/{conversationId} {
      // Permite acesso se o ID do usuário autenticado estiver no nome do documento da conversa
      allow read, write: if request.auth != null && request.auth.uid == conversationId.split('_')[1];

      // Regras para as mensagens dentro de uma conversa
      match /messages/{messageId} {
        // Permite acesso se o usuário tiver acesso à conversa pai
        allow read, write: if request.auth != null && request.auth.uid == conversationId.split('_')[1];
      }
    }
  }
}
