
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow logged-in users to read and write their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow logged-in users to read and write client documents
    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow SDRs to read and write their own performance data
    match /sdr_performance/{sdrId} {
      allow read, write: if request.auth != null && request.auth.uid == sdrId;
    }
    
    // Allow logged-in users to manage the podcast schedule
    match /podcast_schedule/{episodeId} {
        allow read, write: if request.auth != null;
    }

    // Fallback for any other path - deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}