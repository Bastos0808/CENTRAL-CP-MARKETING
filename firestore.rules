
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que usuários autenticados leiam e escrevam na coleção de clientes.
    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }

    // Permite que usuários autenticados leiam e criem agendamentos.
    match /schedules/{scheduleId} {
      allow read, write: if request.auth != null;
    }
  }
}
